<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cloudnote.mapper.CategoryMapper">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.cloudnote.entity.Category">
        <id column="category_id" property="categoryId" />
        <result column="name" property="name" />
        <result column="user_id" property="userId" />
        <result column="created_at" property="createdAt" />
        <result column="updated_at" property="updatedAt" />
    </resultMap>

    <!-- 基础字段 -->
    <sql id="Base_Column_List">
        category_id, name, user_id, created_at, updated_at
    </sql>

    <!-- 自定义查询示例：查询用户的分类及笔记数量 -->
    <select id="selectCategoryWithNoteCount" resultType="map">
        SELECT 
            c.category_id,
            c.name,
            c.created_at,
            COUNT(n.note_id) as note_count
        FROM category c
        LEFT JOIN note n ON c.category_id = n.category_id
        WHERE c.user_id = #{userId}
        GROUP BY c.category_id, c.name, c.created_at
        ORDER BY c.created_at DESC
    </select>

</mapper>
